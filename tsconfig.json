{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2017", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "incremental": true,
    "noEmit": true,
    "types": ["vite/client"] // Added this to support Vite in TypeScript
  },
  "exclude": ["node_modules", "dist", "vercel"],
  "include": ["src/**/*"],
  "types": ["node", "firebase", "react-router-dom"]
}
